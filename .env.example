# Database Configuration
POSTGRES_USER=dasana
POSTGRES_PASSWORD=dasana
POSTGRES_DB=dasana

# Database URL
# For Docker: postgresql://dasana:dasana@db:5432/dasana (uses container hostname)
# For local: postgresql://dasana:dasana@localhost:5432/dasana
# For Railway: Use the DATABASE_URL provided by Railway PostgreSQL addon
DATABASE_URL=postgresql://dasana:dasana@localhost:5432/dasana

# Application
NODE_ENV=development
PORT=5000

# AWS S3 (optional - for file uploads)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name
